<h1 class="text-center">Lista de Equipos</h1>
<div class="row">
  <div class="col-sm-9">
    <h4>Los equipos que se encuentran registrados en el sistema son los siguientes</h4>
  </div>
  <div class="col-sm-3">
    <a href="vistas/Equipo/crearEquipo" class="btn btn-block btn-success">Crear Equipo</a>
  </div>
</div>
<br>
<% for(var i = 0; i < equipos.length; i++) { %>
<div class="row">
  <div class="col-sm-4">
    <h2><%= equipos[i].nombre %></h2>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-5">
    <p>
      ID: <%= equipos[i].id %>
      <br>
      Nombre:<%= equipos[i].nombre %>
      <br>
      <% var fecha = new Date(equipos[i].fechaCreacion); %>
      Fecha de creación: <%= fecha.toISOString().substr(0, 10) %>
      <br>
      País de residencia: <%= equipos[i].paisResidencia %>
    </p>
  </div>
  <div class="col-sm-1"></div>
  <div class="col-sm-1">
    <a href="/Equipo/borrarEquipo?id=<%= equipos[i].id %>" class="btn btn-block btn-danger">X</a>
    <a href="/Equipo/actualizarEquipo?id=<%= equipos[i].id %>" class="btn btn-block btn-info">Editar</a>
  </div>
</div>
<br>
<% } %>

